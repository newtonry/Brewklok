<div class="jumbotron" id="front-page-jumbo">
  <h1>Weclome to Brewklok!</h1>
  <p>Ready to brew some beer?</p>
  <p><a class="btn btn-primary btn-lg" role="button">Learn more</a></p>
</div>

<div class='container'>
	<h2>Recent Brews</h2>
	<% @recipes.each do |recipe| %>
		<ul><a href="<%= recipe_url(recipe) %>"><%= recipe.name %></a>
		<% recipe.ingredients.each do |ingredient| %>
			<li><%= ingredient.name %> - at <%= ingredient.time %> min</li>
		<% end %>
		</ul>
	<% end %>
</div>