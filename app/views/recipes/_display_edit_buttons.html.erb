<% if logged_in? %>
	<i class="glyphicon glyphicon-edit" id="edit-button" data-recipeid="<%= @recipe.id %>"
		onClick="makeRecipeEditable(event);"></i>
	
	<i class="glyphicon glyphicon-floppy-disk" id="save-button" onClick="saveRecipe();"></i>
	<i class="glyphicon glyphicon-floppy-remove" id="cancel-save-button" onClick="cancelSaveRecipe();"></i>
	</h3>
<% else %>
	<i class="glyphicon glyphicon-edit" id="edit-button" data-recipeid="<%= @recipe.id %>"></i>
	</h3>
	<p>Please <a href='<%= new_session_url %>'>login</a> to edit recipes</p>
<% end %>
